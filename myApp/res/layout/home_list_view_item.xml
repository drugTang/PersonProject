<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <ImageView 
        android:id="@+id/iv_news"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:padding="10dp"
        android:src="@drawable/demo"/>
    
    <TextView android:id="@+id/tv_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_news"
        android:padding="5dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="#c000"
        android:textSize="18sp"/>
    
    <TextView android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_news"
        android:layout_alignLeft="@id/tv_news_title"
        android:textSize="12sp"
        android:textColor="#c0c0c0"
        android:padding="5dp"/>
    

</RelativeLayout>

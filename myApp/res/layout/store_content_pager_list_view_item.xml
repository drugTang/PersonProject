<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/iv_store_like_image"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:src="@drawable/demo" />

    <TextView
        android:id="@+id/tv_store_like_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_store_like_image"
        android:singleLine="true"
        android:text="尚客优快捷酒店"
        android:textColor="#c000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_store_like_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_store_like_title"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_store_like_image"
        android:maxLines="2"
        android:text="[jiaying xueyuan ]"
        android:textColor="#c0c0c0"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_store_like_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_store_like_image"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_store_like_image"
        android:singleLine="true"
        android:text="￥108"
        android:textColor="#00CED1"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_store_like_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="697m"
        android:textColor="#a000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_store_like_sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_store_like_image"
        android:layout_alignParentRight="true"
        android:text="已售654件"
        android:textColor="#a000"
        android:textSize="14sp" />

</RelativeLayout>